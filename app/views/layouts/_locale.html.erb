<% if session[:user_id] %>
  <% user_locale = User.find( session[:user_id] ).preferred_locale %>
  <div id="locale-selection" class="alignright">
  <%= form_tag(url_for(:controller => 'login', :action => 'changelocale')) do %>
    <select name="locale" onchange="this.form.submit()">
      <%= options_for_select(I18n.available_locales.map{ |locale| [I18n.name_for_locale(locale), locale] }, user_locale) %>
    </select>
  <% end %>
  </div>
<% end %>

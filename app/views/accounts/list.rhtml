<h1>Accounts in group <%= @group_name %> for team <%= @team_name %></h1>
  <table>
    <% for account in @accounts %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= link_to image_tag( "encrypted_small.png" ) + " " + account.accountname, :action => 'show', :id => account %></td>
        <td><%= account.description %></td>
        <td><%= link_to image_tag("edit.png"), :action => 'edit', :id => account %></td>
        <td><%= link_to image_tag("remove.png"), { :action => 'destroy', :id => account }, :confirm => 'Are you sure?', :method => :post %></td>
      </tr>
    <% end %>
  </table>


<h1>Accounts in group <%= @group.name %> for team <%= @team.name %></h1>

<table>

  <% for account in @accounts %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= link_to image_tag( "encrypted_small.png" ) + " " + account.accountname, [@team, @group, account] %></td>
      <td><%= account.description %></td>
      <td><%= link_to image_tag("edit.png"), [:edit, @team, @group, account] %></td>
      <td><%= link_to image_tag("remove.png"), [@team, @group, account], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>

</table>


<%= form_for([:admin, @user],html:{ role: 'form'}) do |f| %>
  <%= f.error_messages %>
  
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true %>
  </div>

  <% if @user.new_record? %>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </div>

  <div class="form-group">
    <%= f.label :givenname %>
    <%= f.text_field :givenname %>
  </div>

  <div class="form-group">
    <%= f.label :surname %>
    <%= f.text_field :surname %>
  </div>

  <%= f.submit @submit_button_text, class: 'btn' %>
<% end %>

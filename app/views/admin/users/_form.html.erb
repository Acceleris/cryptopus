<!--[form:user]-->
<%= form_for([:admin, @user]) do |f| %>
  <%= f.error_messages %>
  
  <%= f.label :username %>
  <%= f.text_field :username, :autofocus => true %>

  <% if @user.new_record? %>
    <%= f.label :password %>
    <%= f.password_field :password %>
  <% end %>
  
  <%= f.label :admin %>
  <%= f.check_box :admin %>

  <%= f.label :givenname %>
  <%= f.text_field :givenname %>

  <%= f.label :surname %>
  <%= f.text_field :surname %>

  <%= f.submit @submit_button_text %>
<% end %>

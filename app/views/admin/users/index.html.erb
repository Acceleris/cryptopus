<h1>List of all Cryptopus users:</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Ldap UID</th>
    <th>Admin</th>
    <th>Action</th>
  </tr>

  <% for user in @users  %>
    <tr class="<%= cycle( 'odd', 'even' ) %>">
      <td><%= link_to get_user_cn(user), edit_admin_user_path(user) %></td>
      <td><%= user.uid.to_s %></td>
      <% if user.admin == true %>
        <td><%= image_tag("flag.png") %></td>
      <% else %>
        <td></td>
      <% end %>
      <td><%= link_to image_tag( "remove.png" ), [:admin, user], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>

</table>


<h1><%=t '.title' %></h1>

<table class='table table-striped'>
  <tr>
    <th><%=t '.username' %></th>
    <th><%=t '.name' %></th>
    <th><%=t '.ldap_uid' %></th>
    <th><%=t '.admin' %></th>
    <th><%=t '.action' %></th>
  </tr>

  <% for user in @users.unlocked  %>
      <tr class="<%= cycle( 'odd', 'even' ) %>">
        <td><%= link_to user.username, edit_admin_user_path(user) %></td>
        <td><%= user.label %></td>
        <td><%= user.uid.to_s %></td>
        <td>
          <% if user.admin == true %>
            <%= image_tag("flag.png") %>
          <% end %>
        </td>
        <td>
          <% if user != current_user %>
            <%= link_to_destroy [:admin, user], user %>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>

<h2><%=t '.locked' %></h2>

<table class='table table-striped'>
  <tr>
      <th><%=t '.username' %></th>
      <th><%=t '.name' %></th>
      <th><%=t '.action' %></th>
  </tr>
  <% for user in @users.locked  %>
      <tr class="<%= cycle( 'odd', 'even' ) %>">
        <td><%= link_to user.username, edit_admin_user_path(user) %></td>
        <td><%= user.label %></td>
        <td><%= link_to image_tag("unlock.png"),  unlock_admin_user_path(user.id), title: t('.unlock')%></td>
      </tr>
  <% end %>
</table>

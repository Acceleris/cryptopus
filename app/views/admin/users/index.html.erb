<h1><%=t '.title' %></h1>

<table class='table table-striped'>
  <tr>
    <th><%=t '.username' %></th>
    <th><%=t '.name' %></th>
    <th><%=t '.ldap_uid' %></th>
    <th><%=t '.admin' %></th>
    <th><%=t '.action' %></th>
  </tr>

  <% for user in @users.unlocked  %>
      <tr class="<%= cycle( 'odd', 'even' ) %>">
        <td><%= link_to user.username, edit_admin_user_path(user) %></td>
        <td><%= user.full_name %></td>
        <td><%= user.uid.to_s %></td>
        <% if user.admin == true %>
          <td><%= image_tag("flag.png") %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to image_tag( "remove.png" ), [:admin, user], data: {confirm: t(:confirmation)}, method: :delete %></td>
      </tr>
  <% end %>
</table>

<h2><%=t '.locked' %></h2>

<table class='table table-striped'>
  <tr>
      <th><%=t '.username' %></th>
      <th><%=t '.name' %></th>
      <th><%=t '.action' %></th>
  </tr>
  <% for user in @users.locked  %>
      <tr class="<%= cycle( 'odd', 'even' ) %>">
        <td><%= link_to user.username, edit_admin_user_path(user) %></td>
        <td><%= user.full_name %></td>
        <td><%= link_to image_tag("unlock.png"),  unlock_admin_user_path(user.id), title: t('.unlock')%></td>
      </tr>
  <% end %>
</table>

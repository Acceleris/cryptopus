<h1>Re-encryption requests</h1>
<table>
  <tr>
    <th>User</th>
    <th>Admin required</th>
    <th>Root required</th>
    <th>Actions</th>
  </tr>
    
  <% for recryptrequest in @recryptrequests %>
    <tr>
      <td><%= LdapTools.get_ldap_info( User.find( recryptrequest.user_id ).uid.to_s, "cn" ) %></td>
      <% if recryptrequest.adminrequired == true %>
        <td>Yes</td>
      <% else %>
        <td>No</td>
      <% end %>
      <% if recryptrequest.rootrequired == true %>
        <td>Yes</td>
      <% else %>
        <td>No</td>
      <% end %>
      <td><%= link_to image_tag( "remove.png" ), [:admin, recryptrequest], :method => :delete %></td>
    </tr>
  <% end %>

</table>


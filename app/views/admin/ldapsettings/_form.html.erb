<!--[form:ldapsetting]-->
<% form_for( [:admin, @ldapsetting] ) do |f| %>
  <%= f.error_messages %>

  <%= f.text_field :basename %>
  <%= f.label :basename %><br/>

  <%= f.text_field :hostname %>
  <%= f.label :hostname %><br/>

  <%= f.text_field :portnumber %>
  <%= f.label :portnumber %><br/>

  <%= f.select("encryption", { 'none' => "none", 'SSL/TLS' => "simple_tls" }) %>
  <%= f.label :encryption %><br/>

  <%= f.submit @submit_button_text %>
<% end %>

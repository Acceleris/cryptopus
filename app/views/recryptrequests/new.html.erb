<%= form_tag :action => 'create' do %>

  <p>
    <%=t 'admin.recryptrequests.uncrypterror.ldap_password_changed'%><br/>
    <%=t 'admin.recryptrequests.uncrypterror.ldap_enter_old_password'%>
  </p><br/>


  <% if @user.last_login_at %>
    <p>
      <%=t :last_login, :time_ago => (time_ago_in_words @user.last_login_at)%>
    </p><br/>
  <% end %>

  <p>
    <label for="new_password">
      <%=t 'admin.recryptrequests.uncrypterror.ldap_new_password'%>
      <%= password_field_tag :new_password, params[:new_password], :autofocus => true %>
    </label>
    <br/>
    <label for="old_password">
      <%=t 'admin.recryptrequests.uncrypterror.ldap_old_password'%>
      <%= password_field_tag :old_password, params[:old_password] %>
    </label>
  </p><br/>

  <p>
  	<%=t 'admin.recryptrequests.uncrypterror.forgot_password_recrypt'%>
  </p><br/>

  <p>
    <label for="recrypt_request">
      <%=t :forgot_password %>
      <%= check_box_tag :recrypt_request %>
    </label>
  </p><br/>

  <label for="send">
    <%= submit_tag t('admin.recryptrequests.uncrypterror.send') %>
  </label>

<% end %>


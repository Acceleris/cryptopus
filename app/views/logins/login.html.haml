.login-form
  = form_tag({action: 'authenticate'}, {class: 'login'}) do
    %fieldset
      = image_tag("logo_cryptopus.svg", class: 'logo')
      .form-group
        = text_field_tag :username, params[:username], id: 'username', placeholder: t(:username), class: 'form-control'
        = password_field_tag :password, nil, id: 'password', placeholder: t(:password), class: 'form-control'
      = submit_tag t('.submit'), class: 'btn btn-primary'
= javascript_include_tag :login

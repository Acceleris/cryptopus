<h1>Change password</h1>
<%= form_tag action: 'update_password' do %>
	<fieldset>
    	<label for="old_password">
				<%=t '.old' %>
				<%= password_field_tag :old_password, '',autofocus: true  %>
			</label>
    	<label for="new_password1">
				<%=t '.new' %>
				<%= password_field_tag :new_password1 %>
			</label>
    	<label for="new_password2">
				<%=t '.new_retype' %>
				<%= password_field_tag :new_password2 %>
			</label>
    	<label for="submit">
				<%= submit_tag I18n.t('logins.show_update_password.submit') %>
			</label>
	</fieldset>
<% end %>


= form_for([@team, @group], role: 'form') do |f|
  = f.error_messages
  .form-group
    = f.label :name
    = f.text_field :name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  = f.submit @submit_button_text, class: 'btn btn-primary'

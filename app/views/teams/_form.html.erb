<!--[form:team]-->

<% form_for( @team ) do |f| %>
  <%= f.error_messages %>

  <%= f.text_field :name %>
  <%= f.label :name %><br/>

  <%= f.check_box :private %>
  <%= tooltip "Private", { :tooltip => 'Admins don\'t have access to this team' }, :class => 'mytooltip' %><br/>

  <%= f.check_box :visible %>
  <%= tooltip "Visible", { :tooltip => 'Visible to non-members' }, :class => 'mytooltip' %><br/>

  <%= f.check_box :noroot %>
  <%= tooltip "No Root", { :tooltip => 'NOT EVEN ROOT CAN RESTORE YOUR DATA IF YOU LOSE
    YOUR PASSWORD' }, :class => 'mytooltip' %><br/>

  <%= f.text_area :description %>
  <%= f.label :description %><br/>

  <%= f.submit @submit_button_text %>
<% end %>

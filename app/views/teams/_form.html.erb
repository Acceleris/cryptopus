<!--[form:team]-->

<%= form_for( @team ) do |f| %>
  <%= f.error_messages %>

  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>

  <%= tooltip t('.private'), :options => { :tooltip => t('.private_hint') }, :class => 'mytooltip' %>
  <%= f.check_box :private %>

  <%= tooltip t('.no_root'), :options => { :tooltip => t('.no_root_hint') }, :class => 'mytooltip' %>
  <%= f.check_box :noroot %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit @submit_button_text %>
<% end %>

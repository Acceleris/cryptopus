{{#each .}}
  <li class="result">
    <div class="result-description">
      <h1 class="result-title">
        <a href="/teams/{{team_id}}/groups/{{group_id}}/accounts/{{id}}">{{accountname}}</a><br>
      </h1
      <br>
      <span>
        <a href="/teams/{{team_id}}/groups">{{team}}</a>
        >
        <a href="/teams/{{team_id}}/groups/{{group_id}}/accounts">{{group}}</a>
      </span>
    </div>
    <br>
    <div class="result-action form-group">
      <div class="result-username select-click">
        <input id="username_{{id}}" type="text" value="{{cleartext_username}}" class="form-control" readonly>
        <button class="btn clip_button_search" data-clipboard-target="username_{{id}}" title="Click to copy">
          <svg class="icon-clippy">
            <use xlink:href="#icon-clippy"></use>
          </svg>
        </button>
      </div>

      <div class="result-password select-click">
        <a href="#" class="password-link">Show password</a>
        <input id="password_{{id}}"type="text" class="password-hidden hide form-control" value="{{cleartext_password}}" readonly>
        <button class="btn clip_button_search" data-clipboard-target="password_{{id}}" title="Click to copy">
          <svg class="icon-clippy">
            <use xlink:href="#icon-clippy"></use>
          </svg>
        </button>
      </div>
    </div>
  </li>
{{/each}}
